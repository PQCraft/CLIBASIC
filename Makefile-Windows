C = gcc

CFLAGS = -O2 -ffreestanding -lm --std=c99

BUILD64 = $(C) clibasic.c -m64 $(CFLAGS) -D B64 -o clibasic.exe
BUILD32 = $(C) clibasic.c -m32 $(CFLAGS) -D B32 -o clibasic.exe

all:
	del /q /f clibasic.exe
	$(BUILD64)
	.\clibasic.exe

all32:
	del /q /f clibasic.exe
	$(BUILD32)
	.\clibasic.exe

build:
	$(BUILD64)

build32:
	$(BUILD32)

run:
	.\clibasic.exe

debug:
	.\clibasic.exe --debug

clean:
	del /q /f clibasic.exe
